{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "es2020",
        "module": "es2020",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "typeAcquisition": {
        "include": ["@types/webpack", "@types/jest"]
    },
    "include": ["lib/**/*", "webpack"],
    "exclude": ["dist", "node_modules"]
}
