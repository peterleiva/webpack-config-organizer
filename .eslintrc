{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": ["eslint:recommended", "plugin:node/recommended", "prettier"],
    "parserOptions": {
        "ecmaVersion": 12
    },

    "overrides": [
        {
            "files": ["**/__tests__/**/*.js", "**/__mocks__/**/*.js"],
            "env": {
                "jest/globals": true
            },
            "extends": "plugin:jest/style",
            "plugins": ["jest"]
        }
    ]
}
