        "debug": "^4.3.1",
        "eslint": "^7.25.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-jest": "^24.3.6",
        "jest": "^26.6.3",
        "jest-watch-typeahead": "^0.6.3",
