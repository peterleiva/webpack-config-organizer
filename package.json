{
    "name": "webpack-build-tools",
    "version": "0.1.0",
    "description": "A helper for separating concerns related to webpack environment and preset config files",
    "main": "./lib/index.js",
    "engines": {
        "node": ">=15.3"
    },
    "type": "module",
    "scripts": {
        "prettier": "prettier --ignore-path .gitignore .",
        "format:check": "npm run prettier -- --list-different",
        "format:fix": "npm run prettier -- --write",
        "lint": "eslint .",
        "test": "jest",
        "test:watch": "npm t -- --watch",
        "prepare": "husky install"
    },
    "lint-staged": {
        "./lib/*": [
            "eslint",
            "prettier --list-different"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/peterleiva/webpack-build-tools.git"
    },
    "keywords": [
        "webpack",
        "helper"
    ],
    "author": "Peter Leiva <pleiva@id.uff.br>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/peterleiva/webpack-build-tools/issues"
    },
    "homepage": "https://github.com/peterleiva/webpack-build-tools#readme",
    "devDependencies": {
        "@babel/core": "^7.14.0",
        "@babel/preset-env": "^7.14.0",
        "@types/jest": "^26.0.23",
        "babel-jest": "^26.6.3",
        "debug": "^4.3.1",
        "eslint": "^7.25.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-jest": "^24.3.6",
        "eslint-plugin-node": "^11.1.0",
        "husky": "^6.0.0",
        "jest": "^26.6.3",
        "jest-extended": "^0.11.5",
        "jest-watch-typeahead": "^0.6.3",
        "lint-staged": "^10.5.4",
        "prettier": "^2.2.1"
    },
    "dependencies": {
        "cosmiconfig": "^7.0.0",
        "lodash": "^4.17.21",
        "webpack-merge": "^5.7.3"
    }
}
